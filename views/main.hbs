<div class="section no-pad-bot" id="index-banner">
    <div class="container">
        <br>
        <br>
        <h1 class="header center orange-text">Burger Time!</h1>
        <div class="row center">
            <h5 class="header col s12 light"></h5>
        </div>
        <br>
        <br>

    </div>
</div>


<div class="container">
    <form class="row">
        <div class="input-field col s10">
            <input placeholder="Enter a new burger name" id="name-input" type="text" class="validate">
            <label class="active" for="name-input">Burger Name</label>
        </div>
        <div class="col s2">
            <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                <i class="material-icons right">send</i>
            </button>
        </div>
    </form>
    
    <div class="section">
        <div class="row">
            <div class="col s6">
                <table>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        {{#each burgers}} 
                            {{#unless this.devoured}}
                                <tr>
                                    <td>{{this.name}}</td>
                                    <td>
                                        <a class="waves-effect waves-light btn eat" data-id="{{this.id}}">eat</a>
                                    </td>

                                </tr>
                            {{/unless}} 
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <div class="col s6">
                <table>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Eaten</th>
                        </tr>
                    </thead>

                    <tbody>
                        {{#each burgers}} 
                            {{#if this.devoured}}
                                <tr>
                                    <td>{{this.name}}</td>
                                    <td>
                                        <i class="material-icons">check</i>
                                    </td>
                                </tr>
                            {{/if}} 
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>
